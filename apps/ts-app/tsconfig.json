{
  "compilerOptions": {
    "incremental": true,
    "module": "esnext",
    "target": "es2020",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "types": [
      "node"
    ],
    "plugins": [
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
